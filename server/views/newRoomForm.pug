extends layout

include mixins/_sideNav

block content
	nav.nav--top
		ul
			li
				a(class="" href="/rooms") return
	main
		+sideNav()

		b
		form(action=`/rooms/new-room` method="POST")
			label(for="name") Room name
			input(id="name" type="text" name="name" value="Public Room")
			
			//- Should become something like a dropdown with the available playlist from user
			label(for="playlist") Use playlist
			input(id="playlist" type="text" name="playlist" value="7mCLaqlcQ61U9HPMbGXwUd")

			p Room type
			label(for="type-public") Public
			input(id="type-public" type="radio" name="public" value="true" checked)
			label(for="type-private") Private
			input(id="type-private" type="radio" name="public" value="false")

			input(type="submit" value="Add Room")